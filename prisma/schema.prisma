generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum ReservationStatus {
  CONFIRMED
  CANCELLED
  BLOCKED
}

enum ScanAction {
  SCAN
  IN
  OUT
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  dept      String?
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ✅ 預約發起人（Organizer）
  reservations Reservation[] @relation("OrganizerReservations")

  // ✅ 取消者（如果你目前有用 cancelledReservations，這裡就保留）
  cancelledReservations Reservation[] @relation("CancelledByReservations")

  // ✅ 與會者（join table）
  attendingReservations ReservationAttendee[]

  accessLogs AccessLog[]
}

model Room {
  id        String   @id @default(cuid())
  name      String
  floor     String
  capacity  Int
  isActive  Boolean  @default(true)
  features  String[] @default([])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  reservations Reservation[]
  accessLogs   AccessLog[]
}

model Reservation {
  id        String            @id @default(cuid())
  roomId    String
  startAt   DateTime
  endAt     DateTime
  title     String?
  headcount Int?
  status    ReservationStatus @default(CONFIRMED)
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  room Room @relation(fields: [roomId], references: [id])

  // ✅ 預約發起人（用你既有的 User）
  organizerId String?
  organizer   User?   @relation("OrganizerReservations", fields: [organizerId], references: [id])

  // ✅ 取消者（保留可選）
  cancelledById String?
  cancelledBy   User?   @relation("CancelledByReservations", fields: [cancelledById], references: [id])

  // ✅ 與會者 join table
  attendees ReservationAttendee[]
  AccessLog AccessLog[]

  @@index([roomId, startAt])
  @@index([organizerId])
  @@index([cancelledById])
}

model ReservationAttendee {
  id String @id @default(cuid())

  reservationId String
  userId        String

  reservation Reservation @relation(fields: [reservationId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([reservationId, userId])
  @@index([reservationId])
  @@index([userId])
}

model AccessLog {
  id            String     @id @default(cuid())
  roomId        String
  userId        String
  reservationId String?
  action        ScanAction @default(SCAN)
  scannedAt     DateTime   @default(now())

  room        Room         @relation(fields: [roomId], references: [id])
  user        User         @relation(fields: [userId], references: [id])
  reservation Reservation? @relation(fields: [reservationId], references: [id])

  @@index([roomId, scannedAt])
  @@index([userId, scannedAt])
}
